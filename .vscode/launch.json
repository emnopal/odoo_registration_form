{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:Odoo",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python":"${command:python.interpreterPath}",
            "program":"${workspaceRoot}/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "--config=C:/odoo/server/odoo.conf",
                "-u all"
            ],
            "cwd":"${workspaceRoot}",
            "env": {},
            "envFile":"${workspaceRoot}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To Upgrade XML or View no need to restart odoo server -->
    <!-- Customize Tree View -->
    <!-- Tree View is list view in Odoo -->
    <record id="view_regis_form_tree" model="ir.ui.view">
        <!--Name convention: {model_name}.tree-->
        <!--Name convention: {model_name}.{model_category}-->
        <field name="name">form.regist.tree</field>
        <!-- For model: find it on models module -->
        <field name="model">form.regist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fullname" string="Name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="bio"/>
                <field name="create_date" string="Account Created"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_regis_form_kanban" model="ir.ui.view">
        <field name="name">form.regist.kanban</field>
        <field name="model">form.regist</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/> <!--ID is needed when create kanban view-->
                <field name="fullname" string="Name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="bio"/>
                <field name="create_date" string="Account Created"/>
                <!-- Need to add templates tag for kanban view, otherwise will be error -->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="fullname"/>
                                    </li>
                                    <li>
                                        Age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form -->
    <record id="view_regis_form_form" model="ir.ui.view">
        <!--Name convention: {model_name}.form-->
        <field name="name">form.regist.form</field>
        <field name="model">form.regist</field>
        <field name="arch" type="xml">
            <form>
                <!--Sheet: to make border in form-->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="fullname"/>
                        </h1>
                    </div>
                    <!--Group: to make label visible-->
                    <group>
                        <!--Group: to make grouping for each label-->
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="bio"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

